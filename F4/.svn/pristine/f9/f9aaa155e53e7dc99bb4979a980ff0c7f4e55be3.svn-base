        <script src="__STATIC__/admin/lib/layui/layui.js" charset="utf-8"></script>
        <script src="__STATIC__/admin/js/x-layui.js" charset="utf-8"></script>
        <script src="__STATIC__/admin/js/jquery.min.js" charset="utf-8"></script>
        <script type="text/javascript">


            $("#picfile").change(function(event){
                var formData = new FormData();
                formData.append("file", $(this).get(0).files[0]);//get取得其中一个匹配的元素。 num表示取得第几个匹配的元素。//append 向每个匹配的元素内部追加内容,参数1(要追加到目标中的内容),参数2()

                var path = $(this).val(),
                extStart = path.lastIndexOf('.'),
                ext = path.substring(extStart,path.length).toUpperCase();
                //判断图片格式
                if(ext !== '.PNG' && ext !== '.JPG' && ext !== '.JPEG' && ext !== '.GIF'){
                    alert('上传图片格式必须为：png,jpg,jpeg,gif');
                    resetFile();
                    return false;
                }
                //获取图片大小
                var size = this.files[0].size / 1024;
                if(size > 10240){
                    alert('图片大小不能超过10M');
                    resetFile();
                    return false;
                }
                $.ajax({
                    url:'bannerupload',
                    type:'POST',
                    data:formData,
                    cache: false,
                    contentType: false,    //不可缺
                    processData: false,    //不可缺
                    success:function(data){
                        // alert(data);
                        $("#imgshow").attr("src","__STATIC__/uploads/banner/"+data);
                    },
                    error:function(){
                        alert("图片无效");
                    }
                });
            })

            $("#addbut").click(function(){
                var pic=$("#imgshow").attr('src');

                //要给数据库添加的图片名字
                picname=pic.substr(pic.lastIndexOf('/')+1);

                var info=$(bannerform).serialize()+"&pic="+picname;

                $.ajax({
                    url:"{:url('banner/doadd')}",
                    type:"post",
                    data:info,
                    dataType:"html",
                    async:true,
                    success:function(data){
                        if(data>0){
                            layer.alert('添加成功!',{icon: 6},function(){
                                var index = parent.layer.getFrameIndex(window.name);
                                parent.layer.close(index);
                                parent.location.reload();
                            });
                        }
                    },
                    error:function(){
                        alert("请求失败,请重试");
                    }
                });
            });
        </script>

